<script>
    $(function () {
        $("#datePrevionnelle").datepicker({
            dateFormat: 'dd/mm/yy',
            minDate: 0
        });
    });
    $(function () {
        $("#heurePrevionnelle").timepicker({
            use24hours: true,
            format: 'HH:mm'
        });
    });
</script>

</head>

<body>
<nav class="navbar navbar-expand-lg bg-primary text-uppercase">
<div class="container">
<h1 class="text-white"><%= title %></h1>
<div class="collapse navbar-collapse" id="navbarResponsive">
<ul class="navbar-nav ms-auto">
<li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 
rounded text-white" href="/">Home</a></li>
<li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 
rounded text-white" href="/createqr">Create</a></li>
<li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 
    rounded text-white" href="/utilisateurs">Utilisateur</a></li>
<li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-3 px-0 px-lg-3 
    rounded text-white" href="/interventions">Intervenant</a></li>
</ul>
</div>
</div>
</nav>
<header class="masthead text-center">
<div class="container d-flex align-items-center flex-column">
<p></p>
</div>
 </header>
<div class="container-fluid align-items-center">
 <div class="form-group">
    <% if (saisie) { %>
<form action="/createqr/scan" method="POST" class="form">
<div class="form-group">
    <label for="identite">Identité</label>
    <input type="text" class="form-control" name="identite" id="identite" placeholder="Entrez votre prénom suivi de votre nom">
</div>
<div class="form-group">
    <label for="code">Code de sécurité :</label>
    <input type="password" name="code" class="form-control" id="code" placeholder="Entrez votre code à l'abri des regards...">
<div class="form-group">
<div class="form-group">
    <label for="salle">Salle :</label>
    <input type="string" name="salle" class="form-control" id="salle" placeholder="Entrez la salle...">
<div class="form-group">
<div class="form-group">
    <label for="datePrevionnelle">Date prévisionnelle:</label>
    <input type="string" name="datePrevionnelle" class="form-control" id="datePrevionnelle" placeholder="Entrez la date...">
<div class="form-group">
<div class="form-group">
        <label for="heurePrevionnelle">Heure prévisionnelle :</label>
        <input type="string" name="heurePrevisionnelle" class="form-control" id="heurePrevionnelle" placeholder="Entrez l'heure...">
<div class="form-group">
    <div class="form-group">
        <label for="heureEntree">Heure d'entrée:</label>
        <input type="string" name="heureEntree" class="form-control" id="heureEntree" placeholder="Entrez l'heure d'entrée...">
<div class="form-group">
<div class="form-group">
    <label for="heureFin">Heure fin :</label>
    <input type="string" name="heureFin" class="form-control" id="heureFin" placeholder="Entrez l'heure...">
<div class="form-group">
<br />
<button type="submit" class="btn btn-outline-primary">Générer le QR Code</button>
</form>
<% } else { %>
    <h3>Voici le QR Code généré :</h3>
    <img src=<%=qr_code %> alt="QR Code">
    <% } %>
</div>
</div>
</body>
</html>
